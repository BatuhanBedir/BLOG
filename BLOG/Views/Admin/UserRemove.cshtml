@model AppUserIndexVM
@{
    ViewData["Title"] = "User";
}
<table class="table">
    <thead>
        <tr>

            <th>Article</th>
            <th>Transaction</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AppUsers)
        {
            var tm = "#deleteModal" + item.Id;
            var mid = "deleteModal" + item.Id;

            <tr>
                <td>@Html.DisplayFor(modelItem=>item.UserName)</td>
                @Html.HiddenFor(modelItem=>item.Id)
                <td>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="@tm">
                        Delete User
                    </button>
                </td>
            </tr>
            <!-- Modal Start-->
            <div class="modal fade" id="@mid" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="deleteModalLabel">@item.UserName user will be deleted!!!!</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-primary">Yes</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal End -->
        }
    </tbody>
</table>
